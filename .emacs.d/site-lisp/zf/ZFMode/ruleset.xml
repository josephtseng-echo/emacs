<?xml version="1.0"?>
<ruleset name="ZFMode">
 <description>The ZFMode coding standard builds on the PEAR coding
 standard. Currently used to add a few stricter rules for
 Javascript.</description>
<!-- TODO: Add rule that looks for noise before opening PHP tag -->
 <rule ref="PEAR">
   <exclude name="PEAR.WhiteSpace.ScopeIndent"/>
   <exclude name="PEAR.NamingConventions.ValidVariableName"/>
   <exclude name="PEAR.NamingConventions.ValidFunctionName"/>
 </rule>
 <rule ref="Squiz.ControlStructures.ControlSignature"/>
 <rule ref="ZFMode.WhiteSpace.ScopeIndent"/>
 <rule ref="ZFMode.NamingConventions.ValidVariableName"/>
 <rule ref="ZFMode.NamingConventions.ValidFunctionName"/>
 <rule ref="Generic.Files.LineLength">
   <properties>
     <property name="lineLimit" value="80"/>
   </properties>
 </rule>
</ruleset>
